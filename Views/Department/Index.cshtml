@model List<ExamASP.Entities.Department>
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1>List Department</h1>
        </div>
        <div class="col-lg-6">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary float-end">Add Department</a>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Location</th>
                        <th scope="col">
                            Number Of
                            Personals
                        </th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.id</th>
                            <td>@item.name</td>
                            <td>@item.code</td>
                            <td>@item.location</td>
                            <td>@item.numberOfPersonals</td>
                            <td>
                                <a class="me-2 btn btn-info" href="@Url.ActionLink("Edit", "Department", new {id=item.id})">Edit</a>
                                <a class="me-2 btn btn-danger" onclick="return confirm('Ban muon xoa danh muc @item.name')" href="@Url.ActionLink("Delete", "Department", new {id=item.id})">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
